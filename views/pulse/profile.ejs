<!DOCTYPE html>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manager Profile</title>
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
            color: #000;
            display: flex;
            font-size: 15px;
            
        }

        /* Sidebar styles */
        aside {
            background: linear-gradient(to bottom, #001861, #0e305f);
            box-shadow: 2px 0px 5px rgba(0, 0, 0, 0.2);
            width: 100px;
            background-color: #001861;
            padding: 20px;
            display: flex;
            flex-direction: column;
            flex-grow: 0; /* Don't grow the sidebar */
        }

        aside nav a:hover {
            color: #ff4500;
        }

        button[type="submit"] {
            background-color: #ff4500;
            color: #fff;
            border: none;
            height: 30px;
            border-radius: 5px;
            padding: 5px 10px;
            cursor: pointer;
            margin-top: 10px;
            transition: all 0.2s;
        }

        button[type="submit"]:hover {
            background-color: #e63c00; 
        }


        nav {
            display: flex;
            flex-direction: column; 
        }

        nav a {
            text-decoration: none;
            color: #fff;
            font-weight: bold;
            margin: 10px 0;
        }

        nav a:hover {
            background-color: #022d6f; 
            transform: scale(1.05); 
            transition: all 0.2s; 
            border-radius: 5px;
            padding: 5px 10px; 
        }


        main {
            flex: 1; /* Take up remaining available space */
            padding: 1px 20px;
            min-height: 100vh;
            flex-wrap: wrap; 
        }

        h2 {
            margin: 0;  /* Ensuring there's no margin */
            width: 100%;
            Padding-top: 10px;
            margin-bottom: 20px;
            border-bottom: 2px solid #ed4a3a;
        }


        .user-info-box {
            background-color: #f0f0f0; 
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .project-container {
            border-bottom: 1px solid #ccc; 
            padding-bottom: 10px; 
            margin-bottom: 10px; 
        }
        .reports-container {
        margin-top: 20px;
        font-family: Arial, sans-serif;
    }

    .report-section {
        border: 1px solid #e1e1e1;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 5px;
    }

    .report-title {
        font-size: 1.5em;
        margin-bottom: 15px;
    }

    .deadlines-list {
        list-style-type: none;
        padding: 0;
    }

    .deadline-item {
        margin-bottom: 10px;
    }

    .deadline-id, .deadline-datetime {
        display: block;
        font-size: 1.1em;
    }

    .more-deadlines {
        font-style: italic;
        color: #777;
    }

        
    </style>
</head>

<body>
    <aside>
        <nav>
            <a href="/pulse/dashboard"><i class="fas fa-tachometer-alt"></i> Overview</a>
            <a href="/pulse/profile"><i class="fas fa-user"></i> Profile</a>
            <a href="/pulse/changepassword"><i class="fas fa-key"></i> Change Password</a>

            <form action="/pulse/logout?_method=DELETE" method="POST">
                <button type="submit">Logout</button>
            </form>
        </nav>
    </aside>

    <main>
        <h1><%= username %>'s Profile</h1>
        
        <div class="user-info-box">
            <h2>User Information</h2>
            <p><strong>Username:</strong> <%= profile[0].username %></p>
            <p><strong>Email:</strong> <%= profile[0].email %></p>
            <p><strong>Address:</strong> <%= profile[0].adress %></p>
            <p><strong>Phone Number:</strong> <%= profile[0].phonenumber.trim() %></p>
            <p><strong>Credentials:</strong> <%= profile[0].credentials %></p>
        </div>    

        <h3>Reports and Deadlines:</h3>
        <div class="reports-list">
            <% reports.forEach(function(report) { %>
                <div class="report-item">
                    <p><strong>Project:</strong> <%= report.project_id %></p>
                    <p><strong>Deadline:</strong> <%= new Date(report.report_date).toLocaleDateString() %></p>
                </div>
            <% }); %>
        </div>


    </main>  
    
        
</body>

</html>
